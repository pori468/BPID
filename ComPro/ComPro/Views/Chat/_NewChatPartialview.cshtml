
<link href="~/Content/chosen.min.css" rel="stylesheet" />
<script src="~/Scripts/chosen.jquery.min.js"></script>
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>


@using (Html.BeginForm("PostNewMessage", "Chat", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    

   
    <div class="form-group">
        <div class="col-md-10">
            <select data-placeholder="select Reciever" multiple class="chosen-select form-control" id="slt" name="invitees"></select>
        </div>
</div>
        <div class="card "form-group"" style="width: 60%;margin:20px;" id="cb5">
            <div class="card-body">
                <h5 class="card-title">Message</h5>

                <p class="card-text">
                    <textarea class="form-control" id="Text" rows="3" name="Message"></textarea>
                </p>

                <input type="submit" class="card-link btn btn-primary" value="Send" id="saveMessage" />

            </div>
        </div>

}

<script type="text/javascript">
        $(function () {

            var url = "/UserProfile/UserList";
            $.ajax({
                method: "GET",
                url: url,
                dataType: "json"
            })
                .done(function (data) {
                    $.each(data, function (k, v) {
                       
                        $('<option>').val(v.UserId).text(v.Name).appendTo('#slt');
                    });
                    $(".chosen-select").chosen();
                });



        });
</script>