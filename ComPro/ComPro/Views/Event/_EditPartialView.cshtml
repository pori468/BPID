
@model ComPro.Models.EventModel


<link href="~/Content/chosen.min.css" rel="stylesheet" />
<script src="~/Scripts/chosen.jquery.min.js"></script>
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<div class="modal fade" id="EventEdit">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <form>
                    <div id="Event_Edit_Message"></div>


                    @Html.HiddenFor(model => model.EventId, new { id = "EventId", htmlAttributes = new { @class = "form-control" } })

                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Title, new { id = "Title", htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Description, new { id = "Description", htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.Place, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Place, new { id = "Place", htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>


                    <div class="form-group">
                        <div class="form-row">
                            <div class="col col-md-10">
                                <label class="control-label col-md-4">Start date</label>
                                <div class="col-md-4">
                                    @*@Html.EditorFor(model => model.Date, new { id = "Date", htmlAttributes = new { @class = "form-control" } })*@
                                    <input type="text" id="startDatetimepickeredit" class="form-control" name="Date" style="width:200px;" value="@Model.Date.ToShortDateString()">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col col-md-10">
                            <label class="control-label col-md-4">Start time</label>
                            <div class="col-md-4">
                                <select id="startTimeedit" class="form-control" name="startTime">
                                    <option selected>@Model.Date.ToShortTimeString()</option>
                                    <option>08:00</option>
                                    <option>08:30</option>
                                    <option>09:00</option>
                                    <option>09:30</option>
                                    <option>10:00</option>
                                    <option>10:30</option>
                                    <option>11:00</option>
                                    <option>11:30</option>
                                    <option>12:00</option>
                                    <option>12:30</option>
                                    <option>13:00</option>
                                    <option>13:30</option>
                                    <option>14:00</option>
                                    <option>14:30</option>
                                    <option>15:00</option>
                                    <option>15:30</option>
                                    <option>16:00</option>
                                    <option>16:30</option>
                                    <option>17:00</option>
                                    <option>17:30</option>
                                    <option>18:00</option>
                                    <option>18:30</option>
                                    <option>19:00</option>
                                    <option>19:30</option>
                                    <option>20:00</option>
                                    <option>20:30</option>
                                    <option>21:00</option>
                                    <option>21:30</option>
                                    <option>22:00</option>


                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-row">
                            <div class="col col-md-10">
                                <label class="control-label col-md-4">Ending date</label>
                                <div class="col-md-4">
                                    @*@Html.EditorFor(model => model.Date, new { id = "Date", htmlAttributes = new { @class = "form-control" } })*@
                                    <input type="text" id="endDatetimepickeredit" class="form-control" name="End" style="width:200px;" value="@Model.End.ToShortDateString()">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col col-md-10">
                            <label class="control-label col-md-4">Ending time</label>
                            <div class="col-md-4">
                                <select id="endtTimeedit" class="form-control" name="endTime">
                                    <option selected>@Model.End.ToShortTimeString()</option>
                                    <option>08:00</option>
                                    <option>08:30</option>
                                    <option>09:00</option>
                                    <option>09:30</option>
                                    <option>10:00</option>
                                    <option>10:30</option>
                                    <option>11:00</option>
                                    <option>11:30</option>
                                    <option>12:00</option>
                                    <option>12:30</option>
                                    <option>13:00</option>
                                    <option>13:30</option>
                                    <option>14:00</option>
                                    <option>14:30</option>
                                    <option>15:00</option>
                                    <option>15:30</option>
                                    <option>16:00</option>
                                    <option>16:30</option>
                                    <option>17:00</option>
                                    <option>17:30</option>
                                    <option>18:00</option>
                                    <option>18:30</option>
                                    <option>19:00</option>
                                    <option>19:30</option>
                                    <option>20:00</option>
                                    <option>20:30</option>
                                    <option>21:00</option>
                                    <option>21:30</option>
                                    <option>22:00</option>


                                </select>
                            </div>
                        </div>
                    </div>
                    <br />

                   

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="button" value="Save" class="btn btn-primary" id="btnEventEdit" />
                        </div>
                    </div>


                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>





<script>

    $(function () {

       
        $("#startDatetimepickeredit").datepicker({
            minDate: 0,
            defaultDate: "+1w",
            changeMonth: true,
            onClose: function (selectedDate) {
                $("#endDatetimepickeredit").datepicker("option", "minDate", selectedDate);
            }, dateFormat: 'dd-mm-yy'
        });
        $("#endDatetimepickeredit").datepicker({
            defaultDate: "+1w",
            changeMonth: true,
            onClose: function (selectedDate) {
                $("#startDatetimepickeredit").datepicker("option", "maxDate", selectedDate);
            }, dateFormat: 'dd-mm-yy'

        });



    });


    $("#btnEventEdit").click(function () {

        var url = "/Event/Edit";

        var Title = $("#Title").val();
        var Description = $("#Description").val();
        //var Date = $("#Date").val();
        var Place = $("#Place").val();
        var Id = $("#EventId").val();
        var Date = $("#startDatetimepickeredit").val() + " "+$("#startTimeedit").val()+":00";
        var End = $("#endDatetimepickeredit").val() + " "+$("#endtTimeedit").val() + ":00";
        
        var request = $.ajax({
            type: "POST",
           url: url,
           data: { Title: Title, Description: Description, Date: Date, End: End, Place: Place, EventId: Id }
        });

        request.done(function (msg) {

            if (msg === "True") {
                $("#Event_Edit_Message").html('<div class="alert alert-success" role="alert"><strong> Thanks!</strong> Your Event is \
                  Successfully Modified.<button type = "button" class= "close" data - dismiss="alert" \
                    aria - label="Close" ><span aria-hidden="true">&times;</span> </button ></div>');


            }
            else {

                $("#Event_Edit_Message").html('<div class="alert alert-danger" role="alert"><strong> Thanks!</strong> Your Event is \
                  Successfully Modified.<button type = "button" class= "close" data - dismiss="alert" \
                    aria - label="Close" ><span aria-hidden="true">&times;</span> </button ></div>');


            }



        });


    });



</script>

