@using ComPro.Helpers
@model IEnumerable<ComPro.Models.NoticeBoard>

@if (Model.Any())
{
    
    <h3>Few latest notices on the board</h3>
    <hr/>
    <div class="row">
    
        @foreach (var i in Model)
        {
            <div class="card-deck" style="margin: 3px;">
                <div class="card bg-light text-white text-center p-3">
                    <blockquote class="blockquote mb-0">
                        <p><a href="/NoticeBoard/Notice?Id=@i.Id" style="color: darkgreen">@i.Title</a></p>
                        <footer class="blockquote-footer" style="color: brown">
                            <small>
                                Posted by:<cite title="Source Title">@i.Creator.Email.UserName()</cite>
                            </small>
                        </footer>
                    </blockquote>
                </div>
             </div>
           
        }
    </div>
}
