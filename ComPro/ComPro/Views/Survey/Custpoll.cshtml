<div id="Custing_Message"></div>

<div>

    <p>@Model.Title</p>
    <p>@Model.Description</p>
    <p>@Model.Question</p>
    <p>
        <label><input type="radio" name="Issue" value="Yes">Yes</label>

        <label><input type="radio" name="Issue" value="No">No</label>


    </p>
    <p>@Model.StartDate</p>
    <p>@Model.EndDate</p>


</div>
    

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" value="Done" class="btn btn-success" id="cust" />
        </div>
    </div>





<script type="text/javascript">


       

        $("#cust").click(function () {


            var vote = $("input[name='Issue']:checked").val().toString();
        
            var id = parseInt('@Model.Id');

            var request = $.ajax({
                type: "POST",
                url: "/Survey/Custpoll",
                data: { Vote: vote, Id: id  }

            });

            request.done(function (msg) {
              
                if (msg === "True") {
                    alert("Your Vote Is Successfully cast");

                    var url = "/Survey/Index";
                    window.location.href = url;

                }

            });




        });



 




</script>